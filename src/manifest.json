{
    "name": "Touch Grass",
    "version": "1.0",
    "description": "A reminder to touch grass now and then.",
    "icons": {
        "16": "icon16.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["scripting", "storage"],
    "host_permissions": [
        "https://www.facebook.com/*"
    ],
    "manifest_version": 3,
    "web_accessible_resources": [
        {
            "resources": ["/animation/animation.html"],
            "matches": ["<all_urls>"]
        }
    ]
}